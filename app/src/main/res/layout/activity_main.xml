<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:paddingTop="48dp"
        android:paddingBottom="32dp">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RİTMİK SAYAÇ"
            android:textColor="@color/accent"
            android:textSize="36sp"
            android:letterSpacing="0.15"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SES TANIMALΙ KELIME SAYICI"
            android:textColor="@color/text_muted"
            android:textSize="9sp"
            android:letterSpacing="0.3"
            android:gravity="center"
            android:layout_marginBottom="28dp" />

        <!-- Setup Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_bg"
            android:padding="20dp"
            android:layout_marginBottom="20dp">

            <!-- Word Input -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SAYILACAK KELIME / CÜMLE"
                android:textColor="@color/text_muted"
                android:textSize="9sp"
                android:letterSpacing="0.3"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etTargetWord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="örn: ya, evet, tamam..."
                android:hintTextColor="@color/text_muted"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:background="@drawable/input_bg"
                android:padding="14dp"
                android:inputType="text"
                android:maxLines="1"
                android:layout_marginBottom="16dp" />

            <!-- Match Mode -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EŞLEŞTİRME MODU"
                android:textColor="@color/text_muted"
                android:textSize="9sp"
                android:letterSpacing="0.3"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/btnModeExact"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:text="TAM"
                    android:textSize="9sp"
                    android:letterSpacing="0.1"
                    android:background="@drawable/toggle_btn_selector"
                    android:selected="true" />

                <Button
                    android:id="@+id/btnModeContains"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:text="İÇİNDE"
                    android:textSize="9sp"
                    android:letterSpacing="0.1"
                    android:background="@drawable/toggle_btn_selector" />

                <Button
                    android:id="@+id/btnModeFuzzy"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="YAKIN"
                    android:textSize="9sp"
                    android:letterSpacing="0.1"
                    android:background="@drawable/toggle_btn_selector" />
            </LinearLayout>

            <!-- Language -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DİL"
                android:textColor="@color/text_muted"
                android:textSize="9sp"
                android:letterSpacing="0.3"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/btnLangTR"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:text="TÜRKÇE"
                    android:textSize="10sp"
                    android:background="@drawable/toggle_btn_selector"
                    android:selected="true" />

                <Button
                    android:id="@+id/btnLangEN"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="İNGİLİZCE"
                    android:textSize="10sp"
                    android:background="@drawable/toggle_btn_selector" />
            </LinearLayout>
        </LinearLayout>

        <!-- Waveform -->
        <LinearLayout
            android:id="@+id/waveformContainer"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <!-- 32 wave bars generated programmatically in code, 
                 but we define them here for binding -->
            <View android:id="@+id/wb1" android:layout_width="4dp" android:layout_height="8dp" android:layout_marginEnd="3dp" android:background="@drawable/wave_bar" />
            <View android:id="@+id/wb2" android:layout_width="4dp" android:layout_height="8dp" android:layout_marginEnd="3dp" android:background="@drawable/wave_bar" />
            <View android:id="@+id/wb3" android:layout_width="4dp" android:layout_height="8dp" android:layout_marginEnd="3dp" android:background="@drawable/wave_bar" />
            <View android:id="@+id/wb4" android:layout_width="4dp" android:layout_height="8dp" android:layout_marginEnd="3dp" android:background="@drawable/wave_bar" />
            <View android:id="@+id/wb5" android:layout_width="4dp" android:layout_height="8dp" android:layout_marginEnd="3dp" android:background="@drawable/wave_bar" />
            <View android:id="@+id/wb6" android:layout_width="4dp" android:layout_height="8dp" android:layout_marginEnd="3dp" android:background="@drawable/wave_bar" />
            <View android:id="@+id/wb7" android:layout_width="4dp" android:layout_height="8dp" android:layout_marginEnd="3dp" android:background="@drawable/wave_bar" />
            <View android:id="@+id/wb8" android:layout_width="4dp" android:layout_height="8dp" android:layout_marginEnd="3dp" android:background="@drawable/wave_bar" />
            <View android:id="@+id/wb9" android:layout_width="4dp" android:layout_height="8dp" android:layout_marginEnd="3dp" android:background="@drawable/wave_bar" />
            <View android:id="@+id/wb10" android:layout_width="4dp" android:layout_height="8dp" android:layout_marginEnd="3dp" android:background="@drawable/wave_bar" />
            <View android:id="@+id/wb11" android:layout_width="4dp" android:layout_height="8dp" android:layout_marginEnd="3dp" android:background="@drawable/wave_bar" />
            <View android:id="@+id/wb12" android:layout_width="4dp" android:layout_height="8dp" android:layout_marginEnd="3dp" android:background="@drawable/wave_bar" />
            <View android:id="@+id/wb13" android:layout_width="4dp" android:layout_height="8dp" android:layout_marginEnd="3dp" android:background="@drawable/wave_bar" />
            <View android:id="@+id/wb14" android:layout_width="4dp" android:layout_height="8dp" android:layout_marginEnd="3dp" android:background="@drawable/wave_bar" />
            <View android:id="@+id/wb15" android:layout_width="4dp" android:layout_height="8dp" android:layout_marginEnd="3dp" android:background="@drawable/wave_bar" />
            <View android:id="@+id/wb16" android:layout_width="4dp" android:layout_height="8dp" android:layout_marginEnd="3dp" android:background="@drawable/wave_bar" />
            <View android:id="@+id/wb17" android:layout_width="4dp" android:layout_height="8dp" android:layout_marginEnd="3dp" android:background="@drawable/wave_bar" />
            <View android:id="@+id/wb18" android:layout_width="4dp" android:layout_height="8dp" android:layout_marginEnd="3dp" android:background="@drawable/wave_bar" />
            <View android:id="@+id/wb19" android:layout_width="4dp" android:layout_height="8dp" android:layout_marginEnd="3dp" android:background="@drawable/wave_bar" />
            <View android:id="@+id/wb20" android:layout_width="4dp" android:layout_height="8dp" android:layout_marginEnd="3dp" android:background="@drawable/wave_bar" />
            <View android:id="@+id/wb21" android:layout_width="4dp" android:layout_height="8dp" android:layout_marginEnd="3dp" android:background="@drawable/wave_bar" />
            <View android:id="@+id/wb22" android:layout_width="4dp" android:layout_height="8dp" android:layout_marginEnd="3dp" android:background="@drawable/wave_bar" />
            <View android:id="@+id/wb23" android:layout_width="4dp" android:layout_height="8dp" android:layout_marginEnd="3dp" android:background="@drawable/wave_bar" />
            <View android:id="@+id/wb24" android:layout_width="4dp" android:layout_height="8dp" android:layout_marginEnd="3dp" android:background="@drawable/wave_bar" />
            <View android:id="@+id/wb25" android:layout_width="4dp" android:layout_height="8dp" android:layout_marginEnd="3dp" android:background="@drawable/wave_bar" />
            <View android:id="@+id/wb26" android:layout_width="4dp" android:layout_height="8dp" android:layout_marginEnd="3dp" android:background="@drawable/wave_bar" />
            <View android:id="@+id/wb27" android:layout_width="4dp" android:layout_height="8dp" android:layout_marginEnd="3dp" android:background="@drawable/wave_bar" />
            <View android:id="@+id/wb28" android:layout_width="4dp" android:layout_height="8dp" android:layout_marginEnd="3dp" android:background="@drawable/wave_bar" />
            <View android:id="@+id/wb29" android:layout_width="4dp" android:layout_height="8dp" android:layout_marginEnd="3dp" android:background="@drawable/wave_bar" />
            <View android:id="@+id/wb30" android:layout_width="4dp" android:layout_height="8dp" android:background="@drawable/wave_bar" />
        </LinearLayout>

        <!-- Counter -->
        <FrameLayout
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp">

            <!-- Ring -->
            <View
                android:id="@+id/counterRing"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/counter_ring"
                android:alpha="0.5" />

            <!-- Number + label -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvCounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/text_primary"
                    android:textSize="80sp"
                    android:fontFamily="sans-serif-condensed"
                    android:textStyle="bold"
                    android:lineSpacingMultiplier="0.85" />

                <TextView
                    android:id="@+id/tvWordLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="—"
                    android:textColor="@color/text_muted"
                    android:textSize="9sp"
                    android:letterSpacing="0.2" />
            </LinearLayout>
        </FrameLayout>

        <!-- Status -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <View
                android:id="@+id/statusDot"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/status_dot_selector"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dinleme durduruldu"
                android:textColor="@color/text_muted"
                android:textSize="10sp"
                android:letterSpacing="0.2" />
        </LinearLayout>

        <!-- Transcript -->
        <TextView
            android:id="@+id/tvTranscript"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="56dp"
            android:background="@drawable/card_bg"
            android:padding="16dp"
            android:text="Mikrofon başlatıldığında metin burada görünecek..."
            android:textColor="@color/text_muted"
            android:textSize="13sp"
            android:layout_marginBottom="16dp" />

        <!-- Controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnStart"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:text="▶  BAŞLAT"
                android:textSize="13sp"
                android:letterSpacing="0.1"
                android:background="@drawable/btn_primary_bg"
                android:textColor="@color/background" />

            <Button
                android:id="@+id/btnReset"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="↺  SIFIRLA"
                android:textSize="13sp"
                android:letterSpacing="0.1"
                android:background="@drawable/btn_danger_bg"
                android:textColor="@color/accent2" />
        </LinearLayout>

        <!-- History -->
        <TextView
            android:id="@+id/tvHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/text_muted"
            android:textSize="11sp"
            android:lineSpacingMultiplier="1.6" />

    </LinearLayout>
</ScrollView>
